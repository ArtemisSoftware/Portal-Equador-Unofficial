@model PortalEquador.Models.CriarContratoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Contrato de: @Model.Nome</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroMecanografico" class="control-label"></label>
                <input asp-for="NumeroMecanografico" class="form-control" />
                <span asp-validation-for="NumeroMecanografico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="IdEmpresa" class="control-label"></label>
                @Html.DropDownListFor(q => q.PosicaoEmpresa, new SelectList(Model.Empresas, "Value", "Text"), "Escolha uma empresa", new { @class = "form-control" })
                <span asp-validation-for="IdEmpresa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdFuncao" class="control-label"></label>
                @Html.DropDownListFor(q => q.PosicaoFuncao, new SelectList(Model.Funcoes, "Value", "Text"), "Escolha uma função", new { @class = "form-control" })
                <span asp-validation-for="IdFuncao" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Voltar</a>
</div>

